
<div class='col-md-6 model-block'>
<button class='btn btn-info btn-lg btn-block bottom-flat'>Edit  </button>
<div class='well col-md-12'>
<% if @instance.errors.any? %>
    <p class='alert alert-danger'>Errors</p>
    <% @instance.errors.full_messages.each do |e| %>
        <p class='text-danger'><%= e %></p>
    <% end %>
<% end %>
<%= form_for @instance, url: {action: "update"}, html: {class: "nifty_form"} do |f| %>
    <% @model.columns.each do |col| %>
        <%= get_html_field_value(@model, @instance, col).html_safe %>
    <% end %>
    <%= f.submit "Update", class: "btn btn-primary submit_btn"%>

<% end %>
</div>
</div>


